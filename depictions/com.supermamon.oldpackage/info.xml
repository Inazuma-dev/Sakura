<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?xml-stylesheet type="text/css" href="style.css"?>
<package>
    <!-- Package Information -->
    <style>
        /* OLED-friendly color scheme */
        package {
            background-color: #000000;
            color: #ffffff;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }
        
        id, name, version {
            color: #43E560; /* Bright green accent */
            font-weight: bold;
            display: block;
            margin: 10px 0;
        }
        
        compatibility, dependencies, descriptionlist, screenshots, changelog, links {
            background-color: #0a0a0a;
            border-radius: 15px;
            padding: 15px;
            margin: 15px 0;
            border: 1px solid #222222;
        }
        
        firmware {
            color: #43E560;
            display: block;
            margin: 10px 0;
        }
        
        maxiOS, otherVersions {
            color: #ffffff;
            display: inline-block;
            margin: 5px 0;
        }
        
        description {
            color: #ffffff;
            display: block;
            margin: 8px 0;
            line-height: 1.5;
        }
        
        change {
            color: #43E560;
            display: block;
            margin: 5px 0;
        }
        
        comment {
            color: #666666;
            font-style: italic;
        }
    </style>

    <id>com.supermamon.oldpackage</id>
    <name>Sakura Package</name>
    <version>1.0</version>
    
    <compatibility>
        <firmware>
            <maxiOS>7.1.2</maxiOS>
            <otherVersions>unsupported</otherVersions>
            <!--
            for otherVersions, you can put either unsupported or unconfirmed
            -->
        </firmware>
    </compatibility>
    
    <dependencies></dependencies>
    
    <descriptionlist>
        <description>This is an Sakura package it contains iOS 7 Tweaks.</description>
        <description>Requires iOS 7.0 up to 7.1.2</description>
    </descriptionlist>
    
    <screenshots></screenshots>
    
    <changelog>
        <change>Initial release</change>
    </changelog>
    
    <links></links>
</package>

